{
  "post_processing_rules": [
    {
      "pattern": "\\s+",
      "replace_with": " "
    },
    {
      "pattern": "([.,!?])\\s*([.,!?])",
      "replace_with": "$1"
    },
    {
      "pattern": "(\\w+)\\s*-\\s*(\\w+)",
      "replace_with": "$1-$2"
    },
    {
      "pattern": "(\\w+)\\s*(\\w+)",
      "replace_with": "$1 $2"
    },
    {
      "pattern": "(\\s*)\\.\\s*\\.\\s*\\.(\\s*)",
      "replace_with": "$1...$2"
    },
    {
      "pattern": "(\\s*)\\!\\s*\\!\\s*\\!(\\s*)",
      "replace_with": "$1!!!$2"
    },
    {
      "pattern": "(\\s*)\\?\\s*\\?\\s*\\?(\\s*)",
      "replace_with": "$1???$2"
    },
    {
      "pattern": "(\\s*)\\!\\s*\\?(\\s*)",
      "replace_with": "$1!?$2"
    },
    {
      "pattern": "(\\s*)\\?\\s*\\!(\\s*)",
      "replace_with": "$1?!$2"
    },
    {
      "pattern": "(\\s*)\\.\\s*(\\s*)",
      "replace_with": ". "
    },
    {
      "pattern": "(\\s*),\\s*(\\s*)",
      "replace_with": ", "
    },
    {
      "pattern": "(\\s*);\\s*(\\s*)",
      "replace_with": "; "
    },
    {
      "pattern": "(\\s*):\\s*(\\s*)",
      "replace_with": ": "
    },
    {
      "pattern": "(\\s*)\\)\\s*(\\s*)",
      "replace_with": ") "
    },
    {
      "pattern": "(\\s*)\\((\\s*)",
      "replace_with": " (" 
    },
    {
      "pattern": "(\\s*)\\[(\\s*)",
      "replace_with": " [" 
    },
    {
      "pattern": "(\\s*)\\]\\s*(\\s*)",
      "replace_with": "] "
    },
    {
      "pattern": "(\\s*)\\{(\\s*)",
      "replace_with": " {" 
    },
    {
      "pattern": "(\\s*)\\}\\s*(\\s*)",
      "replace_with": "} "
    },
    {
      "pattern": "(\\s*)\\\"(\\s*)",
      "replace_with": " \"" 
    },
    {
      "pattern": "(\\s*)\\\"\\s*(\\s*)",
      "replace_with": "\" "
    },
    {
      "pattern": "(\\s*)\\\'(\\s*)",
      "replace_with": " \'" 
    },
    {
      "pattern": "(\\s*)\\\'\\s*(\\s*)",
      "replace_with": "\' "
    }
  ]
}

